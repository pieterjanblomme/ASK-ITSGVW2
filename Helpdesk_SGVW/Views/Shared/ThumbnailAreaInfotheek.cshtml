@model IEnumerable<Infotheek>

@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Categorie.Naam.Replace(" ",string.Empty) menu-infotheek">
        <div class="row">
            <h3 class="text-success"> @Model.FirstOrDefault().Categorie.Naam </h3>
        </div>

    @foreach (var item in Model)
    {
        <div class="border border-infos rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px">
            <div class="row">
                <div class="col-md-3 col-sm-12">
                                      
                        <img srcset=@item.Categorie.Logo height="100" width="100" title=@item.Categorie.Naam />
                    
                </div>
                <div class="col-md-9 col-sm-12">
                    <div class="row pr-3">
                        <div class="col-12 text-justify" style="color:#212a79">
                            <i>@item.SubCategorie.Subcategorie</i>
                             | 
                            <b>@item.Titel</b><br />

                        </div>
                    </div>

                    <div class="row col-12 text-justify d-none d-md-block">

                        <hr />
                        <p><label style="color:#212a79">@item.Omschrijving  </label> </p>
                        <br><label style="color:#212a79"><b>Kernwoorden: </b> <i>@item.Tag1</i> | <i>@item.Tag2</i> | <i>@item.Tag3</i></label><br>
                        <p><label style="color:#212a79"><b>Type: </b> 
                            
                            @if (item.Type == "1")
                            {
                            <label>Instructiefilmpje</label>
                             }
                            @if (item.Type == "2")
                            {
                                <label>Webinar</label>
                            }
                            @if (item.Type == "3")
                            {
                                <label>Handleiding</label>
                            }
                            @if (item.Type == "4")
                            {
                                <label>link</label>
                            }                        
                            </label></p>
                    </div>

                    <div class="col-md-3 col-sm-9 offset-md-9 text-center">
                        @*<a class="btn btn-success2 form-control" href="@item.Url">Bekijk</a>*@
                        <a class="btn btn-succes form-control" asp-area="Personeel" asp-controller="Infotheek" asp-action="Details" asp-route-id="@item.Id">Bekijk</a>
                    </div>
                </div>
            </div>
        </div>
        }
    <div class="p-4"></div>
    </div>
}


