@model IEnumerable<Ticket>

@if (Model.Count() > 0)
{

        @foreach (var item in Model)
        {
            <div class="border border-infos rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px">
                <div class="row">
                    <div class="col-md-3 col-sm-12">

                        <img srcset=@item.School.Logo title=@item.School.Naam />
                        
                        <center>
                            <img srcset="/images/logo/askit3.png" title="Ask-IT" />
                        </center>
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-12 text-right" style="color:#212a79">
                                <b>
                                    @if (@item.Status == "1")
                                    {<label style="color:red">Open</label>}
                                    @if (@item.Status == "2")
                                    {<label style="color:blue">Opgevolgd </label>}
                                    @if (@item.Status == "3")
                                    {<label style="color:green">Afgewerkt </label>}
                                </b>
                            </div>
                        </div>


                        <div class="row col-12 text-justify d-none d-md-block">
                            <p><label style="color:#212a79">Op @item.Datum stelde je een vraag over @item.SubCategorie.Subcategorie </label> </p>
                            <hr />
                            <p><b>Je vraag: </b> <i>@Html.Raw(item.Omschrijving)</i> </p>
                            <p><b>Ticket ID: </b> <i>@item.Id</i></p>
                            <p>
                                <b>Urgentie: </b><i>
                                    @if (@item.Urgentie == "1")
                                    {<label class="text-body">Laag</label>}
                                    @if (@item.Urgentie == "2")
                                    {<label class="text-primary">Hoog</label>}
                                    @if (@item.Urgentie == "3")
                                    {<label style="color:red">Prioritair</label>}
                                </i>
                            </p>
                            <p>

                                @if (@item.Status == "2" || @item.Status == "3")
                                {
                                <p>
                                    <b>Opvolger: </b><i>@item.Opvolger</i>
                                </p>

                                <p><i>@item.Uitleg</i></p>

                            }
                            </div>


                            <div class="col-md-3 col-sm-9 offset-md-9 text-center">
                                <a class="btn btn-succes form-control" asp-area="Personeel" asp-controller="Ticket" asp-action="Details" asp-route-id="@item.Id">Bekijk en bewerk</a>
                            </div>


                        </div>
                </div>
            </div>
        }
        <div class="p-4"></div>
    @*</div>*@
}
