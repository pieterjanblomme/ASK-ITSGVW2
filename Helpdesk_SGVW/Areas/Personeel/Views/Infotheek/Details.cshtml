@model Helpdesk_SGVW.Models.Infotheek

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="form-group row">
        <div class="col-3 offset-0 text-right">
            <partial name="InfotheekDetails" />
        </div>
    </div>
<h1><img srcset="/images/logo/askit3.png" title="Askit" />@Model.Titel</h1>

<div>
    <h4>
        @if (Model.Type == "1")
        {
            <label>Instructiefilmpje</label>
        }
        @if (Model.Type == "2")
        {
            <label>Webinar</label>
        }
        @if (Model.Type == "3")
        {
            <label>Handleiding</label>
        }
        @if (Model.Type == "4")
        {
            <label>link</label>
        }
    </h4>

    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Omschrijving)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Omschrijving)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categorie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categorie.Naam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubCategorie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubCategorie.Subcategorie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag3)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag3)
        </dd>

    </dl>
</div>

@if (Model.Type == "1" | Model.Type == "2")
{
    <iframe width="853" height="480" src="@Html.DisplayFor(model => model.Url)" allowfullscreen style="border:none;"></iframe>
}
@if (Model.Type == "3")
{
    <div class="form-group row">
        <div class="col-3 offset-0">
            <a href="@Model.Url" target="_blank" class="btn btn-success2 form-control">Ga naar document</a>
        </div>
    </div>
}
@if (Model.Type == "4")
{
    <div class="form-group row">
        <div class="col-3 offset-0">
            <a href="@Model.Url" target="_blank" class="btn btn-success2 form-control">Open de link</a>
        </div>
    </div>
}

